<div class="text-center dom_font">
    <% if user_signed_in? %>
    <h5> <strong> Welcome! <%= current_user.email.split("@").first.capitalize %></strong></h5>
    <% end %>
</div>

<div class="text-center">
  <h1><strong><%= link_to "Now Playing", movies_path, class: "a-primary" %> | <%= link_to "Upcoming", movies_path, class: "a-primary" %></strong></h1>
</div><br>

<div class="flex-container">
  <% @upcoming.each do |movie| %>
  <div class="card">
    <span class="cont_font"><%= movie.release_date[5..-1] + "-" + movie.release_date[2...4] %></span>
    <a href="/movies/<%= movie.id %>"><%= (image_tag 'https://image.tmdb.org/t/p/w500' + movie.image) unless movie.image.nil?%><br></a>
    <span class="cont_font"><%= movie.name  %></span>
  </div>
  <% end  %>
</div>
